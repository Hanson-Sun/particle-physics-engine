{
    "source": {
        "include": ["src", "package.json", "README.md"],
        "exclude":["src/module"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "tags": {
        "allowUnknownTags": false,
        "dictionaries": ["jsdoc","closure"]
    },
    "opts": {
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "./docs/",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "homepageTitle": "PPhys2D Documentation",
            "favicon": "path/to/img",
            "title": "PPhys2D",
            "includeFilesListInHomepage": true,
            "base_url": "https://hanson-sun.github.io/particle-physics-engine/",
            "menu": [
                {
                  "title": "Github",
                  "link": "https://github.com/Hanson-Sun/particle-physics-engine"
                }
            ],
            "meta": [
                {
                    "name": "author",
                    "content": "Hanson Sun"
                },
                {
                    "name": "description",
                    "content": "Particle Physics 2D Engine Documentation"
                }
            ]

          }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}